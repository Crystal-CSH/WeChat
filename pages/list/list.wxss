/* pages/list/list.wxss */
.page-section{
  width: 90%;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 10rpx;
  padding: 10rpx;
  margin: 4%;
}

.item-name{
  font-size: 30rpx;
  margin: 10rpx 0 10rpx 30rpx;
}

.img{
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx 0 10rpx 30rpx;
}
.shanchu{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  /* 用了绝对定位的话，top是针对于页面中的，循环后会全部叠加在一起 */
  right: 40rpx;
}

.fabu{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 60rpx;
  right: 30rpx;
}